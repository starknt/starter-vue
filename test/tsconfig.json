{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "..",
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "../test",
    "../*.d.ts"
  ]
}
